<% include partials/header %>


    <section class="bookingForm section--lightblue" id='bookingForm'>
        <form action='/appointment' method="POST" class="">
                   
            <p class='title--small title--neat2a title--uppercase text-overlap title--padding'>
            
            Hi, I'm 
            
            <input 
                    type='text' 
                    class='form__input form__input--short ' 
                    name='fName' 
                    placeholder='first name'
            > 
            
            <input 
                type='text' 
                class='form__input--short form__input' 
                name='lName' 
                placeholder='last name'> <br>
            & I want you to give me a gorgeous 
            
            <input 
                list="treatments" 
                class='form__input form__input--long' 
                placeholder='the treatment'
            >
                <datalist id="treatments">
                    <option value="Express Manicure">
                    <option value="Express Pedicure">
                    <option value="Express Brows">
                    <option value="Express Lashes">
                    <option value="Mani Pedi deluxe">
                    <option value="Dermabrasion">
                    <option value="Shellac 4 week nail">
                </datalist> 
            
            treatment. <br>
            
            I want it on the 
            
            <input class='form__input' 
                type='date' 
                name='date' 
                placeholder='date'
            > 
        
            at 
        
            <input 
                type='time' 
                class='form__input' 
                name='time' 
                min="12:00" 
                max="18:00" 
                placeholder='time'
            >. <br>
        
            You can contact me on 
            
            <input 
                type='number' 
                class='form__input' 
                name='mobile' 
                placeholder='mobile number'
            > <br>
        
            and send me an email at 
        
            <input 
                type='email' 
                class='form__input' 
                name='email' 
                placeholder='email'
            >. <br>
        
            Thanks!
        
        </form>
        <div class='sellbox--inner close--CB item--pointer' id='itemClose' >
            <h3 class='title--xs title--uppercase form__button--submit font--weight--thin title--neat title--padding--mini'><a href='/'>Close</a></h3>
        </div>            
    </section>


<% include partials/footer %>